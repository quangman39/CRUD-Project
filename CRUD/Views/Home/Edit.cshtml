@model PersonUpdateRequest

<h3 class="mt-3">
    Create Person
</h3>
<form asp-action="Edit" asp-controller="Home">
    <input asp-for="PersonId" hidden />
    <div class="card mt-3 shadow">

        <div class="card-body row">
            <div class="mt-3">
                <label class="col-2" asp-for="PersonName"></label>
                <input asp-for="PersonName" class="form-control" />
                <span asp-validation-for="PersonName" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="mt-3">
                <label asp-for="DateOfBirth"></label>
                <input type="date" asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>

            </div>
            <div class="flex-row mt-3">
                @{
                    string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
                }
                @foreach (string gender in genders)
                {
                    <input type="radio" asp-for="Gender" value="@gender" />
                    <label for="@gender">@gender</label>
                }
                <span asp-validation-for="Gender" class="text-danger"></span>

            </div>
            <div class="mt-3 flex-row ">
                <label class="col-2">Country</label>
                <select asp-for="CountryId" class=" col-5 form-control w-25 mt-1" asp-items="@ViewBag.Coutries">
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>

            </div>

            <div class="mt-3 ">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>

            <div class="mt-3 mb-3">
                @if(Model.ReceiveNewsLetters == true)
                    {
                    <input id="ReceiveNewsLetters" name="ReceiveNewsLetters" type="checkbox" value="true" checked="checked" />
                }else
                {
                    <input id="ReceiveNewsLetters" name="ReceiveNewsLetters" type="checkbox" value="true" />
                    ;
                }


                <label for="ReceiveNewsLetters">ReceiveNewsLetters</label>
                <span asp-validation-for="ReceiveNewsLetters" class="text-danger"></span>

            </div>
            <div>
                <button class="btn btn-success mt-3 mb-3"> Update</button>
            </div>

        </div>

    </div>


</form>

@section Scripts {
    @await Html.PartialAsync("_Validate")
}